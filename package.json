{
  "name": "nowplaying-widget",
  "version": "0.0.1",
  "description": "A album art widget displaying the Now Playing song on a users Spotify account.",
  "main": "src/index.js",
  "author": "Dustin Blackman",
  "license": "MIT",
  "engines": {
    "node": "6.10.*"
  },
  "scripts": {
    "build": "concurrently 'npm run build:client' 'npm run build:server'",
    "build:client": "rm -rf dist/static/ && NODE_ENV=production ts-node ./webpack/build.ts",
    "build:server": "rm -rf dist/server && tsc && rm -rf dist/src/ dist/webpack/ dist/test/",
    "dev": "concurrently -k 'npm run dev-server' 'npm run webpack-server'",
    "dev-server": "nodemon -x ./node_modules/.bin/ts-node -w ./server server/index.ts",
    "start": "NODE_ENV=production node ./dist/server/index.js",
    "mocha": "mocha -r ts-node/register test/test.ts",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "tslint --project tsconfig.json --type-check -t stylish '+(src|server|test|typings|webpack)/**/*.ts*'",
    "lint:scss": "stylelint src/**/*.scss",
    "test": "npm run lint && npm run mocha",
    "webpack-server": "ts-node ./webpack/dev.ts"
  },
  "devDependencies": {
    "@types/babel-core": "^6.25.0",
    "@types/bluebird": "^3.5.8",
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.1",
    "@types/compression": "^0.0.33",
    "@types/express": "^4.0.36",
    "@types/extract-text-webpack-plugin": "^2.1.0",
    "@types/helmet": "^0.0.35",
    "@types/mocha": "^2.2.41",
    "@types/mockery": "^1.4.29",
    "@types/nconf": "^0.0.34",
    "@types/node-sass": "^3.10.32",
    "@types/ramda": "^0.24.4",
    "@types/react": "^15.0.38",
    "@types/react-dom": "^15.5.1",
    "@types/react-hot-loader": "^3.0.3",
    "@types/react-redux": "^4.4.46",
    "@types/stylelint": "^7.10.0",
    "@types/supertest": "^2.0.2",
    "@types/webpack": "^3.0.4",
    "@types/webpack-dev-middleware": "^1.9.2",
    "@types/webpack-dev-server": "^2.4.0",
    "@types/webpack-env": "^1.13.0",
    "@types/webpack-hot-middleware": "^2.15.0",
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.0",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "3.0.0",
    "mocha": "^3.4.2",
    "mockery": "^2.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "supertest": "^3.0.0",
    "ts-loader": "^2.3.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-config-semistandard": "^6.0.4",
    "tslint-no-unused-expression-chai": "^0.0.2",
    "tslint-react": "^3.1.0",
    "typescript": "^2.4.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.3.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.5.1",
    "webpack-hot-middleware": "^2.18.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "nconf": "^0.8.4",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-fittext": "^1.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "spotify-web-api-node": "https://github.com/dustinblackman/spotify-web-api-node.git#currently-playing"
  },
  "babel": {
    "presets": [
      "es2015-node6",
      "react"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
