{
  "extends": ["tslint-config-semistandard", "tslint-react", "tslint-config-prettier"],
  "rulesDirectory": ["./node_modules/tslint/lib/rules", "node_modules/tslint-no-unused-expression-chai/rules", "node_modules/tslint-plugin-prettier/rules"],
  "rules": {
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "ordered-imports": true,
    "no-unused-variable": false,
    "no-extra-semi": true,
    "ban": true,
    "switch-default": true,
    "triple-equals": true,
    "prefer-const": true,
    "return-undefined": false,

    "curly": false,
    "await-promise": [true, "Bluebird"],

    "no-unused-expression": false,
    "no-unused-expression-chai": [true, "allow-fast-null-checks", "allow-tagged-template" ],
    "prettier": [true, {"printWidth": 200, "bracketSpacing": false}]
  }
}
